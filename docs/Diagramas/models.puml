@startuml "model"
'left to right direction
'skinparam linetype ortho

class Artista {
    codArtista: Long
    name : String
    cpf : String
    cidade : String
    descricao : String
    foto : Long
}   

class Musica {
    codMusica : Long
    nome : String
    descricao : String
    letra : String
    audio : Long
    imagem : Long
}

class Estilo {
    codEstilo : Long
    nome : String
}

class Album {
    codAlbum : Long
    nome : String
    descricao : String
    imagem : Long
}

class Estabelecimento {
    codEstabelecimento : Long
    nome : String
    cnpj : String
    endereco : String
    cidade : String
    funcionamento : String
    descricao : String
    foto : Long
}

class RedeSocial {
    codRede : Long
    link : String
}

class Mensagem {
    codMensagem : Long
    remetente : Long
    destinatario : Long
    conteudo : String
    dataEnvio : LocalTime
    status : ENVIADA | N√ÉO ENVIADA | APAGADA
}

class Avaliacao{
    codAvaliacao : Long
    avaliador : Long
    avaliado : Long
    nota : Float
    comentario : String
    Imagens : Long
}

class Conversa {
    codConversa : Long
}

Artista "1..*" *-- "0..*" Musica : cadastra
Musica "0..*" o-- "1..*" Estilo : possui
Musica "0..*" o-- "0..*" Album : pertence
Artista "1..1" -- "0..*" Conversa
Estabelecimento "1..1" -- "0..*" Conversa
Conversa "1..1" *-- "1..*" Mensagem : possui
Artista "0..*" -- "0..*" RedeSocial : vincula
Estabelecimento "0..*" -- "0..*" RedeSocial : vincula
Artista "1..1" *-- "0..*" Avaliacao : faz
Estabelecimento "1..1" *-- "0..*" Avaliacao : faz


